<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrateur.charadacrack.GameActivity"
    android:id="@+id/GameActivityLayout"
    android:gravity="fill_horizontal|top"
    android:background="#2C3E50">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="223dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/relativeLayoutTop">

        <TextView android:text="Charades" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="false"
            android:editable="false"
            android:id="@+id/Charades"
            android:textColor="#ffffffff"
            android:paddingLeft="5dp"/>

        </RelativeLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="319dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/gridLayoutForLetterButton">

        <TextView
            android:layout_width="110dp"
            android:layout_height="76dp"
            android:text="RÃ©ponse: "
            android:id="@+id/txtviewTextRep"
            android:layout_row="20"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="158dp"
            android:layout_height="76dp"
            android:id="@+id/txtviewReponse"
            android:layout_row="20"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:layout_columnSpan="3" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="X"
            android:id="@+id/textView_SupprimerReponse"
            android:layout_row="20"
            android:layout_column="5"
            android:textColor="#FFFF0000"
            android:textSize="30dp"
            android:paddingLeft="10dp"
            android:onClick="SupprimerReponse"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="S"
            android:id="@+id/btnLettre_1"
            android:layout_row="21"
            android:layout_column="0"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="A"
            android:id="@+id/btnLettre_3"
            android:layout_row="21"
            android:layout_column="1"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="U"
            android:id="@+id/btnLettre_5"
            android:layout_row="21"
            android:layout_column="2"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="M"
            android:id="@+id/btnLettre_7"
            android:layout_row="21"
            android:layout_column="3"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="O"
            android:id="@+id/btnLettre_9"
            android:layout_row="21"
            android:layout_column="4"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="N"
            android:id="@+id/btnLettre_11"
            android:layout_row="21"
            android:layout_column="5"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="B"
            android:id="@+id/btnLettre_2"
            android:layout_row="22"
            android:layout_column="0"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="P"
            android:id="@+id/btnLettre_4"
            android:layout_row="22"
            android:layout_column="1"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="I"
            android:id="@+id/btnLettre_6"
            android:layout_row="22"
            android:layout_column="2"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="A"
            android:id="@+id/btnLettre_8"
            android:layout_row="22"
            android:layout_column="3"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="N"
            android:id="@+id/btnLettre_10"
            android:layout_row="22"
            android:layout_column="4"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="R"
            android:id="@+id/btnLettre_12"
            android:layout_row="22"
            android:layout_column="5"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

    </GridLayout>

</FrameLayout>
