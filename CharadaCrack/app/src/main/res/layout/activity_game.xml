<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrateur.charadacrack.GameActivity"
    android:id="@+id/GameActivityLayout"
    android:gravity="fill_horizontal|top"
    android:background="#2C3E50">


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="239dp"
        android:layout_gravity="center_horizontal|bottom"
        android:id="@+id/gridLayoutForLetterButton">

        <TextView
            android:layout_width="110dp"
            android:layout_height="76dp"
            android:text="RÃ©ponse: "
            android:id="@+id/txtviewTextRep"
            android:layout_row="20"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:paddingLeft="5dp"/>

        <TextView
            android:layout_width="158dp"
            android:layout_height="76dp"
            android:id="@+id/txtviewReponse"
            android:layout_row="20"
            android:layout_column="2"
            android:textColor="#ffffffff"
            android:textSize="18dp"
            android:paddingLeft="20dp"
            android:layout_columnSpan="3" />

        <Button
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:id="@+id/btn_delete"
            android:layout_row="20"
            android:layout_column="5"
            android:textColor="#ffff0000"
            android:textSize="26dp"

            android:background="?android:attr/selectableItemBackground"
            android:onClick="SupprimerReponse" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="S"
            android:id="@+id/btnLettre_1"
            android:layout_row="21"
            android:layout_column="0"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="A"
            android:id="@+id/btnLettre_3"
            android:layout_row="21"
            android:layout_column="1"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="U"
            android:id="@+id/btnLettre_5"
            android:layout_row="21"
            android:layout_column="2"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="M"
            android:id="@+id/btnLettre_7"
            android:layout_row="21"
            android:layout_column="3"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="O"
            android:id="@+id/btnLettre_9"
            android:layout_row="21"
            android:layout_column="4"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="N"
            android:id="@+id/btnLettre_11"
            android:layout_row="21"
            android:layout_column="5"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="B"
            android:id="@+id/btnLettre_2"
            android:layout_row="22"
            android:layout_column="0"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="P"
            android:id="@+id/btnLettre_4"
            android:layout_row="22"
            android:layout_column="1"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="I"
            android:id="@+id/btnLettre_6"
            android:layout_row="22"
            android:layout_column="2"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="A"
            android:id="@+id/btnLettre_8"
            android:layout_row="22"
            android:layout_column="3"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="N"
            android:id="@+id/btnLettre_10"
            android:layout_row="22"
            android:layout_column="4"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:text="R"
            android:id="@+id/btnLettre_12"
            android:layout_row="22"
            android:layout_column="5"
            android:textSize="18dp"
            android:onClick="ButtonLettreClick" />

    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/layout_PlayerInfo">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="150dp"
            android:layout_height="fill_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:weightSum="1"
            android:id="@+id/layout_niveau">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Niveau: 99/99"
                android:id="@+id/textView_niveau"
                android:layout_weight="0.24"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:autoText="false" />

        </LinearLayout>

        <TextView
            android:layout_width="138dp"
            android:layout_height="match_parent"
            android:text="Points: 99999"
            android:id="@+id/textView_points"
            android:layout_row="1"
            android:layout_column="1"
            android:textColor="#ffffffff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:99"
            android:id="@+id/textView_temps"
            android:layout_row="1"
            android:layout_column="5"
            android:textColor="#ffffffff"
            android:textSize="20dp" />
    </GridLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="285dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal|top"
        android:id="@+id/layout_reponse">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtview_charade"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="#ffffffff" />
    </RelativeLayout>

</FrameLayout>
